# Force pnpm
engine-strict=true

# Auto install peers
auto-install-peers=true

# Prefer workspace packages over registry (needed for first publish bootstrap)
link-workspace-packages=true
prefer-workspace-packages=true

# Strict peer dependencies (React Native ecosystem compatibility)
strict-peer-dependencies=false

# Selective hoisting for React Native/Expo compatibility
# Only hoist packages that need to be at root for Metro bundler
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@expo/*
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom

