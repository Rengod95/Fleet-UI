{
	"extends": ["//"],
	"tasks": {
		"storybook": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"build-storybook": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"../../../packages/*/src/**/*.stories.@(js|jsx|ts|tsx)"
			]
		}
	}
}
