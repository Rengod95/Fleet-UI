{
	"name": "fleet-ui",
	"version": "0.1.0",
	"private": true,
	"description": "Cross-platform React Native UI component and animation SDK",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"typecheck": "turbo run typecheck",
		"clean": "turbo run clean",
		"clean:all": "./clean-install.sh",
		"clean:modules": "rm -rf node_modules packages/*/node_modules apps/*/node_modules tools/*/node_modules",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build && changeset publish",
		"expo-check": "./scripts/expo-doctor-check.sh",
		"playground:prebuild": "pnpm --filter playground prebuild",
		"playground:prebuild:clean": "pnpm --filter playground prebuild:clean",
		"playground:start": "pnpm --filter playground start",
		"playground:ios": "pnpm --filter playground ios",
		"playground:ios:device": "pnpm --filter playground run ios:device",
		"playground:android": "pnpm --filter playground android",
		"playground:android:device": "pnpm --filter playground run android:device",
		"playground:web": "pnpm --filter playground web",
		"android": "expo run:android",
		"ios": "expo run:ios"
	},
	"dependencies": {
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-native": "0.81.5",
		"expo": "~54.0.23"
	},
	"devDependencies": {
		"@babel/core": "7.28.5",
		"@biomejs/biome": "^2.3.5",
		"@changesets/cli": "2.29.7",
		"@testing-library/react-hooks": "8.0.1",
		"@testing-library/react-native": "13.3.3",
		"@types/react": "19.2.3",
		"@types/react-dom": "19.2.3",
		"jest": "^29.7.0",
		"react-native-edge-to-edge": "1.0.1",
		"react-native-gesture-handler": "2.29.1",
		"react-native-nitro-modules": "0.31.6",
		"react-native-reanimated": "4.1.5",
		"react-native-unistyles": "3.0.17",
		"react-native-worklets": "0.6.1",
		"react-native-web": "0.21.2",
		"react-test-renderer": "19.2.0",
		"tsup": "8.5.1",
		"turbo": "2.6.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	},
	"packageManager": "pnpm@10.22.0"
}
